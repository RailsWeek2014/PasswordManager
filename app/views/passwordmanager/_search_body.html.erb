<% i = 0 %>
<% passwords.each do |passwd| %>
	<% i += 1 %>
	<div class="divIPassword">
		<table border="0" cellspacing="10" cellpadding="0" width="100%">
			<tr>
				<td width="5%"><%= i %>.</td>
				<% if isLogin %>
					<td width="20%"><%= link_to passwd.login,passwordmanager_showLogin_path(params[:phrase],passwd.login) %></td>
				<% end %>
				<td width="20%"><%= passwd.url %></td>
				<td width="20%"><%= passwd.password %></td>
				<td width="15%"><%= link_to "Passwort anzeigen" %></td>
				<td width="10%"><%= link_to "Bearbeiten", edit_passwordmanager_path(params[:phrase],passwd) %></td>
				<td width="10%"><%= link_to 'löschen', passwordmanager_path(params[:phrase],passwd,route), data: {confirm: "'#{passwd.url}' wirklich löschen?"}, method: :delete %></td>
			</tr>
		</table>
	</div>
<% end %>