<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
	<table border="0" cellspacing="0" cellpadding="7">
		<tr>
			<td colspan="2" class="tableLoginTdMiddle">
				<div class="deviseUeber">Resend confirmation instructions</div>
			</td>
		</tr>
		<tr>
			<td colspan="2">
				<div class="error">
					<%= devise_error_messages! %>
				</div>
			</td>
		</tr>

		<tr>
			<td>
				<div>
					<%= f.label :email %>
				</div>
			</td>
			<td>
				<div>
	  				<%= f.email_field :email, autofocus: true %>
	  			</div>
	  		</td>
	  	</tr>
	  	<tr>
	  		<td colspan="2">
	 			<div class="tableLoginTdMiddle">
	 				<%= f.submit "Resend confirmation instructions" %>
	 			</div>
	 		</td>
	 	</tr>
	<% end %>
	</table>
