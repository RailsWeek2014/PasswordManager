<table id="tableLinks" border="1" cellspacing="0" cellpadding="5" width="100%">
	<tr>
		<%- if controller_name == 'sessions' %>
			<td class="linkActive"><%= link_to "Anmelden", new_session_path(resource_name) %></td>
		<% else %>
			<td><%= link_to "Anmelden", new_session_path(resource_name) %></td>
		<% end -%>
	</tr>

	<%- if devise_mapping.registerable? %>
	<tr>
		<%- if controller_name == 'registrations' %>
			<td class="linkActive"><%= link_to "Registrieren", new_registration_path(resource_name) %></td>
		<% else %>
			<td><%= link_to "Registrieren", new_registration_path(resource_name) %></td>
		<% end -%>
	</tr>
	<% end -%>

	<%- if devise_mapping.recoverable? %>
	<tr>
		<%- if controller_name == 'passwords' %>
			<td class="linkActive"><%= link_to "Passwort vergessen?", new_password_path(resource_name) %></td>
		<% else %>
			<td><%= link_to "Passwort vergessen?", new_password_path(resource_name) %></td>
		<% end -%>
	</tr>
	<% end -%>

	<%- if devise_mapping.confirmable?  %>
	<tr>
		<%- if controller_name == 'unlocks' %>
			<td class="linkActive"><%= link_to "Bestätigung nicht erhalten?", new_confirmation_path(resource_name) %></td>
		<% else %>
			<td><%= link_to "Bestätigung nicht erhalten?", new_confirmation_path(resource_name) %></td>
		<% end -%>
	</tr>
	<% end -%>

	<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email)  %>
	<tr>
		<td><%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %></td>
	</tr>
	<% end -%>

	<%- if devise_mapping.omniauthable? %>
		<%- resource_class.omniauth_providers.each do |provider| %>
		<tr>
			<td><%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %></td>
		</tr>
		<% end -%>
	<% end -%>

</table>