
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<table id="tableLogin" border="0" cellspacing="0" cellpadding="7">
		<tr>
			<td class="tableLoginTdMiddle" colspan="2">
				<div class="deviseUeber">Anmeldung</div>
			</td>
		</tr>
		<tr>
			<td class="tableLoginTdLabel"><%= f.label :email %></td>
			<td><%= f.email_field :email, autofocus: true %></td>
		</tr>
		<tr>
			<td class="tableLoginTdLabel"><%= f.label :password %></td>
			<td><%= f.password_field :password, autocomplete: "off" %></td>
		</tr>
		<% if devise_mapping.rememberable? -%>
			<tr>
				<td></td>
				<td>
		    		<%= f.check_box :remember_me %>Angemeldet bleiben
		    	</td>
		    </tr>
		<% end -%>

		<tr>
			<td></td>
			<td><%= f.submit "Anmelden" %></td>
		</tr>
		<tr><td>&#160;</td></tr>

	</table>
<% end %>
